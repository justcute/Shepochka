<td>
  <%= link_to user.email, user %>
</td>
<td>
  <%= form_for(user) do |f| %>
    <%= f.select(:role, User.roles.keys.map {|role| [role.titleize, role]})%>
    <td>
      <button><%=f.submit 'Изменить права'%></button>
    </td>
  <%end%>
</td>
<td>
  <%= link_to("Удалить пользователя", user_path(user), :method => :delete, :class => 'button') unless user == current_user %>
</td>
