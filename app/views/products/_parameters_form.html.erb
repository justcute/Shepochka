<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <%= image_tag @product.avatar, style: "width: 500px; display: block" %>

  <p>
    <strong>Название:</strong>
    <%= @product.title %>
  </p>

  <p>
    <strong>Описание:</strong>
    <%= @product.body %>
  </p>

  <p>
    <strong>Рейтинг:</strong>  </p>
    <%= @product.rating%>
    <div class="rating-holder">
      <div class="c-rating c-rating--big" data-rating-value="<%= @product.rating %>">
        <button>1</button>
        <button>2</button>
        <button>3</button>
        <button>4</button>
        <button>5</button>
      </div>
    </div>


<p>Удобство:
<%= form.select :parameter1, options_for_select([0, 1, 2, 3, 4, 5], Product.find(params[:id]).parameter1) %></p>
<p>Форма:
<%= form.select :parameter2, options_for_select([0, 1, 2, 3, 4, 5], Product.find(params[:id]).parameter2) %></p>
<p>Цвет:
<%= form.select :parameter3, options_for_select([0, 1, 2, 3, 4, 5], Product.find(params[:id]).parameter3) %></p>
<p>Гармоничность:
<%= form.select :parameter4, options_for_select([0, 1, 2, 3, 4, 5], Product.find(params[:id]).parameter4) %></p>
<p>Лёгкость сборки:
<%= form.select :parameter5, options_for_select([0, 1, 2, 3, 4, 5], Product.find(params[:id]).parameter5) %></p>


<div class="actions">
  <%=form.submit 'Обновить продукт'%>
</div>


<% end %>
